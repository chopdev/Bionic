<Window x:Class="BionicProject.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignIn" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Etner your email</Label>
        <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Enter your passsword</Label>
        <TextBox x:Name="EmailTextBox"  Grid.Column="1" Grid.Row="0" Margin="10px" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
        <TextBox x:Name="PasswordTextBox"  Grid.Column="1" Grid.Row="1" Margin="10px" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
        <Button x:Name="SignInButton" Grid.Column="0" Grid.Row="2" Margin="10px" Click="SignInButton_Click" >Sign In</Button>
        <Button x:Name="RegisterButton" Grid.Column="1" Grid.Row="2" Margin="10px" Click="RegisterButton_Click"  >Register</Button>
       
    </Grid>
</Window>
